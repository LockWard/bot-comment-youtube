<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <meta name="color-scheme" content="light dark" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@picocss/pico@2/css/pico.min.css" />
    <title>Insert Comment</title>
</head>

<body>
    <header class="container">
        <h1>Insert a Comment</h1>
    </header>
    <main class="container">
        <form action="/comment" method="POST">
            <div id="comments">
                <div class="comment">
                    <label for="videoId">Video ID OR URL:</label>
                    <input type="text" id="videoId" name="videoId" required><br>
                    <label for="text">Comment Text:</label>
                    <textarea id="text" name="text" required></textarea><br>
                </div>
            </div>
            <button type="button" class="secondary" id="addCommentButton">Add Another Comment</button><br><br>
            <button type="submit">Submit Comments</button>
        </form>
        <a href="/logout" type="button">Log Out</a>
    </main>
    <footer class="container"></footer>
    <script>
        document.getElementById('addCommentButton').addEventListener('click', function () {
            const commentsDiv = document.getElementById('comments');
            const newCommentDiv = document.createElement('div');
            newCommentDiv.className = 'comment';
            newCommentDiv.innerHTML = `
        <label for="videoId">Video ID OR URL:</label>
        <input type="text" name="videoId" required><br>
        <label for="text">Comment Text:</label>
        <textarea name="text" required></textarea><br>
    `;
            commentsDiv.appendChild(newCommentDiv);
        });
    </script>
</body>

</html>